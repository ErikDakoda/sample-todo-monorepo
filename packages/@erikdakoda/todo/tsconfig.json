{
  "extends": "default-configs/tsconfig/nextjs.json",
  "root": "true",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "paths": {
      "@dakoda/*": ["../@erikdakoda/*", "./node_modules/@erikdakoda/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "/node_modules/**/*",
    "./database/global.d.ts",
    "./auth/next-auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
