import "../auth/models/base"
import "../todo/list"
import "../todo/todo"

generator js {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters", "fullTextSearch", "fullTextIndex"]
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

plugin prisma {
    provider = '@core/prisma'
    output = './prisma/schema.prisma'
    format = true
}

plugin hooks {
  provider = '@zenstackhq/tanstack-query'
  output = "./hooks"
  target = "react"
}

plugin zod {
  provider = '@core/zod'
  compile = false
  output = "./zod"
}

plugin enhancer {
  provider = '@core/enhancer'
  output = './zenstack'
  generatePermissionChecker = true
  compile = false
}
