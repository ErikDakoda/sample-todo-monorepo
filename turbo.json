{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["DATABASE_*"],
  "tasks": {
    "build-quick": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build": {
      "dependsOn": ["prisma:push", "zen:generate", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build-quick"],
      "cache": false,
      "persistent": true
    },
    "zen:generate": {
      "inputs": ["schema.zmodel"],
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "prisma:deploy": {
      "cache": false
    },
    "clean": { "cache": false },
    "lint": {},
    "format": {},
    "ts:check": {},
    "npm:version": {}
  }
}
